CREATE (kharkiv: City {name: 'Kharkiv'}) -[:NEXT]-> (kyiv: City {name: 'Kyiv'})
CREATE (kyiv) -[:NEXT]-> (kharkiv)
CREATE (poltava: City {name: 'Poltava'}) -[:NEXT]-> (kharkiv)
CREATE (kharkiv) -[:NEXT]-> (poltava)
CREATE (myrgorod: City {name: 'Myrhorod'}) -[:NEXT]-> (poltava)
CREATE (poltava) -[:NEXT]-> (myrgorod)
CREATE (kyiv) <-[:NEXT]- (myrgorod)
CREATE (kyiv) -[:NEXT]-> (myrgorod)
CREATE (lviv: City {name: 'Lviv'}) -[:NEXT]-> (kyiv)
CREATE (kyiv) -[:NEXT]-> (lviv)
;

MATCH (a:City)
CALL apoc.spatial.geocodeOnce(a.name)
YIELD location
SET a.latitude = location.latitude
SET a.longitude = location.longitude
RETURN location.latitude, location.longitude, location.description;